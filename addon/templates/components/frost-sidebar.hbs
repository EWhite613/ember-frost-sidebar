{{#liquid-if isOpen class="container"}}
  <div class="open-container" data-test={{hook (concat hookName '-open')}}>
    <div class="pod">
      {{#frost-scroll}}
        <div class="pod-content">
          {{yield}}
        </div>
      {{/frost-scroll}}
    </div>
    <div class="tab tab-open" {{action (action 'toggleSidebar')}}>
      {{frost-icon class="icon" icon="frost/sidebar-layer-open"}}
    </div>
  </div>
{{else}}
  <div class="closed-container" data-test={{hook (concat hookName '-close')}}>
    <div class="tab" {{action (action 'toggleSidebar')}}>
      {{frost-icon class="icon" icon="frost/sidebar-layer-normal"}}
    </div>
  </div>
{{/liquid-if}}