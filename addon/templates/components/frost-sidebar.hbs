{{#liquid-if isOpen class="container" }}
    <div class="open-container">
        <div class="pod">
			{{yield}}
        </div>

        <div class="tab tab-open" {{action (action 'toggleSidebar')}}>
			{{frost-svg class="icon" path="frost/sidebar-layer-open"}}
        </div>
    </div>
{{else}}
    <div class="closed-container">
        <div class="tab" {{action (action 'toggleSidebar')}}>
			{{frost-svg class="icon" path="frost/sidebar-layer-normal"}}
        </div>
    </div>
{{/liquid-if}}
